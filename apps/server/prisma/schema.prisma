datasource db {
  provider = "mongodb"  // <--- 改成 mongodb
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// 页面模型
model Page {
  // MongoDB 的 ID 必须映射到 _id，并且是 ObjectId 类型
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  
  name      String
  
  // 在 Mongo 里，JSON 类型不用改，Prisma 会自动处理
  content   Json     
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}